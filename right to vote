#include<iostream>
using namespace std;

int main()
{
	int age ;
	cout<<"enter your age :";
	cin>>age;
	if(age<=0)
	cout<<"invalid input";
	else if(age>=18)
	{
		cout<<"you are eligible to vote";
	}
	else
	{
		cout<<"you are not eligible to vote\n";
		cout<<"wait until "<<"18 years"<<" to get eligible to vote\n";
		cout<<"thank you";
	}
}
